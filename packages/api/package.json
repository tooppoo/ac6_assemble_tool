{
  "name": "@ac6_assemble_tool/api",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/types.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc -p tsconfig.build.json",
    "deploy": "wrangler deploy --minify",
    "deploy:preview": "wrangler versions upload",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --cache && prettier . --check --cache",
    "format": "eslint . --cache --fix && prettier . --write --cache",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@ac6_assemble_tool/parts": "workspace:*",
    "@ac6_assemble_tool/shared": "workspace:1.0.0",
    "@praha/byethrow": "0.9.0",
    "hono": "^4.11.3",
    "openai": "6.16.0",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@ac6_assemble_tool/eslint": "workspace:1.0.0",
    "@ac6_assemble_tool/spec": "workspace:1.0.0",
    "@ac6_assemble_tool/tsconfig": "workspace:1.0.0",
    "wrangler": "4.54.0"
  }
}

{
  "name": "@ac6_assemble_tool/web",
  "version": "5.1.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm run sync && vite build && pnpm run sitemap && pnpm run purgecss",
    "build:test": "pnpm run sync:test && vite build --mode test",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "sync": "svelte-kit sync",
    "sync:test": "svelte-kit sync --mode test",
    "check-types": "pnpm run sync:test && tsc -p ./tsconfig.json --noEmit",
    "lint": "concurrently \"pnpm run sync:test && eslint . --cache\" \"prettier . --check --cache\"",
    "format": "pnpm run sync:test && eslint . --fix --cache && prettier . --write --cache",
    "purgecss": "purgecss --config purgecss.config.mjs",
    "sitemap": "tsx scripts/sitemap-generate.ts",
    "test:integration": "playwright test",
    "test:all": "pnpm run test:integration && pnpm run test:unit"
  },
  "devDependencies": {
    "@ac6_assemble_tool/eslint": "workspace:*",
    "@ac6_assemble_tool/spec": "workspace:*",
    "@ac6_assemble_tool/tsconfig": "workspace:*",
    "@playwright/test": "1.57.0",
    "@sveltejs/adapter-static": "3.0.10",
    "@sveltejs/kit": "2.50.1",
    "@sveltejs/vite-plugin-svelte": "6.2.4",
    "@sveltestrap/sveltestrap": "7.1.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/svelte": "5.3.1",
    "concurrently": "9.2.1",
    "eslint-plugin-svelte": "3.14.0",
    "fake-indexeddb": "6.2.5",
    "jsdom": "27.1.0",
    "nodemon": "3.1.11",
    "prettier-plugin-svelte": "3.4.1",
    "purgecss": "7.0.2",
    "sass-embedded": "1.97.2",
    "svelte-sitemap": "2.7.1",
    "vite-bundle-analyzer": "1.3.2"
  },
  "dependencies": {
    "@ac6_assemble_tool/api": "workspace:*",
    "@ac6_assemble_tool/core": "workspace:*",
    "@ac6_assemble_tool/parts": "workspace:*",
    "@ac6_assemble_tool/shared": "workspace:*",
    "@praha/byethrow": "0.9.0",
    "bootstrap": "5.3.8",
    "bootstrap-icons": "1.13.1",
    "ceiocs": "1.0.0",
    "dexie": "4.2.1",
    "i18next": "25.6.1",
    "svelte": "5.46.4",
    "svelte-i18next": "2.2.2",
    "ulid": "3.0.2"
  },
  "optionalDependencies": {
    "sass-embedded-darwin-arm64": "1.97.2",
    "sass-embedded-darwin-x64": "1.97.2",
    "sass-embedded-linux-x64": "1.97.2"
  },
  "type": "module"
}

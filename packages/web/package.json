{
  "name": "@ac6_assemble_tool/web",
  "version": "2.0.2",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm run sync && vite build && pnpm run sitemap && pnpm run purgecss",
    "build:test": "pnpm run sync:test && vite build --mode test",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "sync": "svelte-kit sync",
    "sync:test": "svelte-kit sync --mode test",
    "check-types": "pnpm run sync:test && tsc -p ./tsconfig.json --noEmit",
    "lint": "concurrently \"pnpm run sync:test && eslint . --cache\" \"prettier . --check --cache\"",
    "format": "pnpm run sync:test && eslint . --fix --cache && prettier . --write --cache",
    "purgecss": "purgecss --config purgecss.config.mjs",
    "sitemap": "tsx scripts/sitemap-generate.ts",
    "test:integration": "playwright test",
    "test:all": "pnpm run test:integration && pnpm run test:unit"
  },
  "devDependencies": {
    "@ac6_assemble_tool/eslint": "workspace:1.0.0",
    "@ac6_assemble_tool/spec": "workspace:1.0.0",
    "@ac6_assemble_tool/tsconfig": "workspace:1.0.0",
    "@playwright/test": "1.55.1",
    "@sveltejs/adapter-static": "3.0.10",
    "@sveltejs/kit": "2.37.1",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@sveltestrap/sveltestrap": "7.1.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/svelte": "5.2.8",
    "concurrently": "9.2.1",
    "eslint-plugin-svelte": "3.12.4",
    "fake-indexeddb": "6.2.2",
    "jsdom": "26.1.0",
    "nodemon": "3.1.10",
    "prettier-plugin-svelte": "3.4.0",
    "purgecss": "7.0.2",
    "sass-embedded": "1.92.0",
    "svelte-sitemap": "2.7.1",
    "vite-bundle-analyzer": "1.2.3"
  },
  "dependencies": {
    "@ac6_assemble_tool/core": "workspace:1.0.0",
    "@ac6_assemble_tool/parts": "workspace:1.8.1",
    "@ac6_assemble_tool/shared": "workspace:1.0.0",
    "@praha/byethrow": "0.6.3",
    "bootstrap": "5.3.8",
    "bootstrap-icons": "1.13.1",
    "dexie": "4.2.0",
    "i18next": "25.5.3",
    "svelte": "5.38.6",
    "svelte-i18next": "2.2.2",
    "ulid": "3.0.1"
  },
  "optionalDependencies": {
    "sass-embedded-darwin-arm64": "1.92.0",
    "sass-embedded-darwin-x64": "1.92.0",
    "sass-embedded-linux-x64": "1.92.0"
  },
  "type": "module"
}

{
  "name": "@ac6_assemble_tool/core",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts",
    "./spec-helper/*": "./spec-helper/*.ts"
  },
  "imports": {
    "#core/*": "./src/*.ts",
    "#spec/*": "./spec/*.ts",
    "#spec-helper/*": "./spec-helper/*.ts"
  },
  "scripts": {
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . && prettier . --check",
    "format": "eslint . --fix && prettier . --write",
    "check-types": "tsc --noEmit"
  },
  "author": "philomagi <tooppoo56@gmail.com> (https://github.com/tooppoo)",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@ac6_assemble_tool/eslint": "workspace:1.0.0",
    "@ac6_assemble_tool/spec": "workspace:1.0.0",
    "@ac6_assemble_tool/tsconfig": "workspace:1.0.0",
    "fake-indexeddb": "6.2.2"
  },
  "dependencies": {
    "@ac6_assemble_tool/parts": "workspace:1.8.1",
    "dexie": "4.2.0",
    "ulid": "3.0.1",
    "zod": "4.1.5"
  }
}

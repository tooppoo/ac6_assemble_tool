{
  "name": "@ac6_assemble_tool/parts",
  "version": "1.8.1",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "imports": {
    "#parts/*": "./src/*.ts"
  },
  "scripts": {
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "coverage": "bun test --coverage",
    "vitest": "vitest run",
    "vitest:coverage": "vitest run --covereage",
    "lint": "eslint . --cache && prettier . --check --cache",
    "format": "eslint . --cache --fix && prettier . --write --cache",
    "check-types": "tsc --noEmit",
    "generate-part-id": "bun scripts/generate-part-id-cli.ts",
    "validate-ids": "bun scripts/validate-part-ids.ts",
    "build": "bun run validate-ids"
  },
  "author": "philomagi <tooppoo56@gmail.com> (https://github.com/tooppoo)",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@ac6_assemble_tool/eslint": "workspace:1.0.0",
    "@ac6_assemble_tool/tsconfig": "workspace:1.0.0"
  }
}